<Window x:Class="MapReveal2.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapReveal2"
        mc:Ignorable="d"
        Title="MapReveal - Player Window" Height="300" Width="300">
    <Grid x:Name="grid">
        <Grid>
            <Image Name="PlayerImage"/>
            <Image Name="OpacityImage"/>
            <Border x:Name="laserPoint" Background="Red" Width="10" Height="10" CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Top" />
        </Grid>
    </Grid>
</Window>
